<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                {{!-- left side --}}
                <div class="row">
                    <div class="col-sm-6">
                        <img src="https://via.placeholder.com/375x500">
                    </div>
                    {{!-- right side --}}
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col">
                                <img class="rounded-corners" id="profilepicsmall" src="/images/default-user.jpg">
                                <h6 id="accountNamemodal">Account Name</h6>
                                <a id="modalfollow" href="#">Follow</a>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span id="Xclose" aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col">
                                <h6>UserName: Comment</h6>
                                <h6>UserName: Comment</h6>
                                <h6>UserName: Comment</h6>
                                <h6>UserName: Comment</h6>
                                <h6>UserName: Comment</h6>
                                <h6>UserName: Comment</h6>
                                <h6>UserName: Comment</h6>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col">
                                <img id="likepic" src="/images/heart-outline.png" onmouseover="hover(this);"
                                    onmouseout="unhover(this);" />
                                <h6 id="likes"># likes</h6>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col">
                                <form>
                                    <div class="form-group">
                                        <textarea class="form-control" id="CommentArea" rows="3"
                                            placeholder="Enter your comment"></textarea>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

